@model IEnumerable<MarketplaceDomain.Model.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
